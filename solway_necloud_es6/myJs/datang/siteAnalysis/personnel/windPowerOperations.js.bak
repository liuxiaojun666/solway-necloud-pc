app.directive('wpoMap', ['myAjaxData', '$ocLazyLoad', (myAjaxData, $ocLazyLoad) => ({
    restrict: 'E',
    scope: {
        detail: '='
    },

    link($scope, $element, $attrs) {
        const setWidthHeight = () => {
            $($element).width(((window.innerWidth - 630) < 300) ? 300 : window.innerWidth - 630)
                .height(((window.innerHeight - 145) < 470) ? 470 : window.innerHeight - 145)
        }
        setWidthHeight()
        const myChart = echarts.init($element[0])
        window.addEventListener('resize', () => {
            setWidthHeight()
            myChart.resize()
        })

        $ocLazyLoad.load([
            document.getElementById('routerJS').getAttribute('param')
            + '/vendor/echarts/china.js',
        ]).then(() => {
            const option = {
                tooltip: {
                    trigger: 'item',
                },
                series: [{
                    name: '检修台次',
                    type: 'map',
                    mapType: 'china',
                    roam: true,
                    label: {
                        emphasis: {
                            show: false
                        }
                    },
                    itemStyle: {
                        normal: {
                            borderWidth: .5,//区域边框宽度
                            borderColor: '#fff',//区域边框颜色
                            areaColor: "#60b4a4",//区域颜色
                        },
                        emphasis: {
                            borderWidth: .5,//区域边框宽度
                            borderColor: '#fff',//区域边框颜色
                            areaColor: "#60b4a4",//区域颜色
                        }
                    },
                    data: [
                        ...[
                            { name: '山西', value: 1 },
                            { name: '新疆', value: 3 },
                            { name: '内蒙古', value: 6 },
                            { name: '北京', value: 100 },
                            { name: '广东', value: 16 },
                        ].map(v => ({
                            name: v.name,
                            value: v.value,
                            selected: false,
                            itemStyle: {
                                normal: {
                                    areaColor: "#20668e",//区域颜色
                                },
                                emphasis: {
                                    areaColor: "#20668e",//区域颜色
                                }
                            },
                            label: {
                                normal: {
                                    formatter() {
                                        return v.value
                                    },
                                    show: true,
                                    textStyle: {
                                        color: '#fff',
                                        fontSize: 9,
                                    }
                                }
                            },
                        })),
                        {
                            name: '南海诸岛',
                            itemStyle: {
                                normal: {
                                    opacity: 0
                                }
                            },
                            label: {
                                normal: {
                                    show: false
                                }
                            }
                        }
                    ],
                    zlevel: 3
                }]
            }
            myChart.setOption(option)
        })

    }
})])

app.directive('wpoChartBar', ['myAjaxData', '$ocLazyLoad', (myAjaxData, $ocLazyLoad) => ({
    restrict: 'E',
    scope: {
        detail: '='
    },

    link($scope, $element, $attrs) {
        const setWidthHeight = () => {
            $($element).width(400).height(((window.innerHeight - 410) < 195) ? 195 : window.innerHeight - 410)
        }
        setWidthHeight()
        const myChart = echarts.init($element[0])
        window.addEventListener('resize', () => {
            setWidthHeight()
            myChart.resize()
        })

        const option = {
            tooltip: {},
            grid: {
                left: '20',
                right: '60',
                bottom: '20',
                containLabel: true
            },
            xAxis: {
                type: 'value',
                splitNumber: 3,
                axisLine: {
                    lineStyle: {
                        color: '#999'
                    }
                },
                axisTick: {
                    show: false
                }
            },
            yAxis: {
                name: '省份',
                type: 'category',
                axisLine: {
                    lineStyle: {
                        color: '#999'
                    }
                },
                axisTick: {
                    show: false
                },
                data: ['山东', '福建', '新疆', '内蒙古', '黑龙江', '贵州']
            },
            series: [
                {
                    type: 'bar',
                    barWidth: '15',
                    label: {
                        normal: {
                            show: true,
                            position: 'right',
                            textStyle: {
                                color: '#2adc49'
                            }
                        },
                    },
                    data: [18203, 123489, 229034, 304970, 531744, 630230].map((value, i, arr) => ({
                        value,
                        itemStyle: {
                            normal: {
                                color: ['#d3f0db', '#bceec8', '#a2edb2', '#85eb9d', '#5de77b', '#2adc49'][(value / Math.max(...arr) * 5).toFixed()],
                            }
                        }
                    }))
                },
            ]
        }
        myChart.setOption(option)


    }
})])

