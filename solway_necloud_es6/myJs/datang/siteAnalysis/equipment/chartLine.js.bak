app.directive('equipmentChartLine', ['myAjaxData', (myAjaxData) => ({
    restrict: 'E',
    scope: {
        width: '=',
        height: '=',
        xname: '=',
        yName: '=',
        xdata: '=',
        lines: '=',
        colors: '=',
        timeType : '='
    },

    link ($scope, $element, $attrs) {
        let myChart = echarts.init($element[0])
        $scope.$watch('lines', (newValue) => {
            if (!newValue) return
            let xAxisData = '';
            switch ($scope.timeType) {
                case 'MONTH':
                    xAxisData = $scope.xdata.map(v => new Date(v).Format('dd'))
                    break;
                case 'YEAR':
                    xAxisData = $scope.xdata.map(v => new Date(v).Format('MM'))
                    break;
                case 'ACCUM':
                    xAxisData = $scope.xdata.map(v => new Date(v).Format('yyyy'))
                    break;
                default:
                    xAxisData = $scope.xdata.map(v => new Date(v).Format('yyyy-MM-dd'))
                    break;
            }
            const option = {
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    type: 'scroll',
                    bottom: 10,
                    data: $scope.lines.map(v => ({
                        name: v.name,
                        icon: 'rect'
                    }))
                },
                color: $scope.colors/* ['#a780e9', '#ffc275', '#6584f8', '#e761b0', '#4fbfe3', '#7ede44'] */,
                grid: {
                    top: '40',
                    left: '20',
                    right: '60',
                    bottom: '40',
                    containLabel: true
                },
                xAxis: {
                    name: $scope.xname,
                    type: 'category',
                    splitNumber: 3,
                    axisLine: {
                        lineStyle: {
                            color: '#999'
                        }
                    },
                    axisTick: {
                        show: false
                    },
                    splitLine: {
                        show: true,
                        interval: 0,
                    },
                    data: xAxisData
                },
                yAxis: {
                    name: $scope.yName,
                    type: 'value',
                    axisLine: {
                        lineStyle: {
                            color: '#999'
                        }
                    },
                    axisTick: {
                        show: false
                    },
                    splitLine: {
                        show: false
                    },
                },
                series: $scope.lines.map(v => ({
                    name: v.name,
                    type: 'line',
                    symbolSize: 0,
                    data: v.values
                }))
            }
            myChart.setOption(option)
        })
    
        window.addEventListener('resize', myChart.resize);
        
    }
})])