$(function () {
    const container = document.getElementById('aboutDoc');
    container.getElementsByClassName('close')[0].addEventListener('click', function () {
        container.style.display = 'none';
    });

    container.addEventListener('click', function(event) {
        if (event.target.className.includes('clickable')) {
            $(container).find('li.active').removeClass('active');
            event.target.className = event.target.className + ' active';
            container.getElementsByTagName('iframe')[0].src = "/tpl/publicComponent/aboutDoc/" + event.target.dataset.filename + ".html";
        }
    })
});