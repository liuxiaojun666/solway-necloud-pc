app.directive('pageSlideDown', ['$ocLazyLoad', '$http', '$state','$stateParams', '$timeout','$rootScope', ($ocLazyLoad, $http, $state, $stateParams,$timeout,$rootScope) => ({
    restrict: 'E',
    transclude: !0,
    replace: !0,
    scope: {

    },
    templateUrl: 'tpl/enrichment/components/pageSlideDown.html'+window.stamp,
    link($scope, $element) {

        $scope.currentState = $state.current.name;
        $scope.goChildrenPage = type => {
            if ($state.current.name == 'power-index171024') {
                $http({
                    method: "POST",
                    url: window.baseUrl + "/UserAuthHandle/setSTClass.htm",
                    params: {
                    }
                }).success(function (res) {
                    $state.go(type);
                });
            } else {
                $state.go(type);
            }
        }

        //到不同首页
        $scope.goMainPage = () =>{
            $state.go($rootScope.mainPageUrl);
        }
        // $scope.goIndexPage = type =>{
        //     $state.go(type);
        // }

        //鼠标悬浮0.5s页面头部，出现下拉页面
        let timer = null;
        const setMainHeight = () => {
            let wHeight = $(window).height();
            let muduleHeight = 375;
            $(".module-list").css('marginTop', (wHeight - muduleHeight)/2)
        }

        setMainHeight()

        window.addEventListener('resize', setMainHeight);
        $scope.$on('$destroy', () => {
            window.removeEventListener('resize', setMainHeight);
        });

        $timeout(() => {
            $('body').on('mouseover','.hover-header-con',()=>{
                timer = setTimeout(() => {
                    $(".systems-page").slideDown();
                }, 500);
            })
            $('body').on('mouseout', '.hover-header-con', () => {
                if (timer) clearTimeout(timer);
            })
        }, 0)

        $('body').on('click', '.hover-header-con-click', () => {
            $(".systems-page").slideDown();
        })

        $(".close_btn_slide").click(() => {
            $(".systems-page").slideUp();
        });

        $(".square-common").hover(function () {
            $(this).addClass('active');
        }, function () {
            $(this).removeClass('active');
        })

    },
    controller($scope, $element){
        $scope.stamp = window.stamp;
    }
})])
