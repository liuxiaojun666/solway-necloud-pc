ajaxData({
    cardDetail: {
        name: 'GETcardDetail',
        data: {},
        later: true,
        onlyLatest: true
    },
    addViewsCount:{
        name: 'POSTaddViewsCount',
        data: {},
        later: true,
        onlyLatest: true
    }
}, {
    __serviceName__: 'productInformationDetailService',
})('productInformationDetailCtrl', ['$scope', 'productInformationDetailService', 'actionRecord','$timeout'], ($scope, myAjaxData, historicalRecord,$timeout) => {
    
    $scope.$on('productId',(e,v)=>{
        $scope.id = v;
        getDetailData();
    });

    const getDetailData = ()=>{
        $scope.cardDetail.getData({
            id : $scope.id,
			queryType : 'proInfo'
        }).then(res=>{
            if (res.code == 0) {
                $scope.data = res.data;
                $http({
					method : "POST",
					url : window.baseUrl+"/shareRepository/addViewsCount.htm",
					params : {
						'id' : $scope.id,
						'queryType' : 'proInfo'
					}
				});
            }
        });
    }

    //附件下载
    $scope.download = id =>{
		window.open(window.baseUrl+"/shareRepository/downloadAttachment.htm?id="+id);
	}

    // 销毁 事件
    $scope.$on('$destroy', () => {
    });
});