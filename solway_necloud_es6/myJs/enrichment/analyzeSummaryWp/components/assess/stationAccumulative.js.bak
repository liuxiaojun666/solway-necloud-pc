ajaxData({
    // info
    analysis_wp_station_eval_send_accum_info: {
        name: 'GETanalysis_wp_station_eval_send_accum_info',
        data: {},
        later: true
    },
    // 时间 列表
    analysis_wp_station_eval_send_accum_timelist: {
        name: 'GETanalysis_wp_station_eval_send_accum_timelist',
        data: {},
        later: true,
        onlyLatest: true
    },
    // 时间 曲线
    analysis_wp_station_eval_send_accum_timeline: {
        name: 'GETanalysis_wp_station_eval_send_accum_timeline',
        data: {},
        later: true,
        onlyLatest: true
    },
}, {
    __serviceName__: 'assessStationAccumulativeWpService',
})('assessStationAccumulativeWpCtrl', ['$scope', 'assessStationAccumulativeWpService', 'actionRecord'], ($scope, myAjaxData, historicalRecord) => {
    /// 初始化 scope
    $scope.initChildScope($scope, myAjaxData);

    // 主页面初始化完成 回调
    $scope.mainPageInitComplete = async () => {
        let { showShape} = historicalRecord.get().themeAssessStationAccum || {};
        $scope.changeShowShape(showShape || 'list');
        const { dateType, dateTime } = historicalRecord.get();
        $scope.dateType = dateType;
        $scope.dateTime = dateTime;
        await $scope.dateUpdated();
        $('.ng-clock').removeClass('ng-clock');
        $scope.initComplete = true;
        await myAjaxData.timeout(0);
        await $scope.diffGetData(true);
        $scope.$apply();
    };


    // 切换电站 回调
    $scope.switchPowerCallback = () => $scope.diffGetData(true);


    // 日期改变
    $scope.dateUpdated = async () => {
        await myAjaxData.timeout(0);
        $scope.diffGetData(true);
    };

    // 切换显示形式  图表 or 列表
    $scope.changeShowShape = showShape => {
        $scope.showShape = showShape;
        historicalRecord.set({
            themeAssessStationAccum: {
                ...historicalRecord.get().themeAssessStationAccum || {},
                showShape
            }
        });
        $scope.diffGetData();
    };

    // 接口请求
    $scope.diffGetData = async (getInfo) => {
        if (!$scope.initComplete) return;
        await myAjaxData.timeout(0);
        setDataNull(getInfo);
        $scope.$apply();
        const { showShape, dateTime = {showDate: null}, dateType, dataType, tabIndex } = $scope;
        if (dateType !== 3) return;
        if (dataType !== 0) return;
        if (getInfo) {
            $scope.analysis_wp_station_eval_send_accum_info.getData({
                queryCode: 'analysis_wp_station_eval_send_accum_info',
                queryType: 3,
                date: dateTime.showDate
            });
        }
        if (showShape === 'list') {
            $scope.analysis_wp_station_eval_send_accum_timelist.getData({
                queryCode: 'analysis_wp_station_eval_send_accum_timelist',
                queryType: 3,
                date: dateTime.showDate
            });
        } else if (showShape === 'chart') {
            $scope.analysis_wp_station_eval_send_accum_timeline.getData({
                queryCode: 'analysis_wp_station_eval_send_accum_timeline',
                queryType: 3,
                date: dateTime.showDate
            });
        }
    };

    // 时间 列表
    $scope.analysis_wp_station_eval_send_accum_timelist.getDataCallback = (success, res) => {
        if (!success) return;
        $scope.datasource = res.body.data;
        $scope.column = [
            {
                title: '日期',
                dataIndex: 'dtime',
                align: 'center',
                sort: true,
            },
            {
                title: '可研电量' + '(' + res.body.units.eval_kwh + ')',
                dataIndex: 'eval_kwh',
                align: 'right',
                sort: true,
            },
            {
                title: '上网电量' + '(' + res.body.units.send_kwh + ')',
                dataIndex: 'send_kwh',
                align: 'right',
                sort: true,
            },
            {
                title: '偏差率' + '(' + res.body.units.ste_dev_we_r + ')',
                dataIndex: 'ste_dev_we_r',
                align: 'right',
                sort: true,
            },
        ];
    };

    // 时间 曲线
    $scope.analysis_wp_station_eval_send_accum_timeline.getDataCallback = (success, res) => {
        if (!success) return;
        $scope.xdata = res.body.data.dtime;
        $scope.ydatas = [[res.body.data.eval_kwh, res.body.data.send_kwh], [res.body.data.ste_dev_we_r]];
    };

    // 数据置空
    function setDataNull(getInfo) {
        $scope.column = [];
        $scope.xdata = void 0;
        $scope.ydatas = void 0;
        $scope.analysis_wp_station_eval_send_accum_timelist.res = null;
        $scope.analysis_wp_station_eval_send_accum_timeline.res = null;
        if (getInfo) $scope.analysis_wp_station_eval_send_accum_info.res = null;
    }

    // 销毁 事件
    $scope.$on('$destroy', () => {
        setDataNull();
    });
});