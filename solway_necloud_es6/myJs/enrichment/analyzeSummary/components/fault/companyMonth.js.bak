ajaxData({
    // info
    analysis_company_fail_month_info: {
        name: 'GETanalysis_company_fail_month_info',
        data: {},
        later: true
    },
    // 电站 列表
    analysis_company_fail_month_stationlist: {
        name: 'GETanalysis_company_fail_month_stationlist',
        data: {},
        later: true,
        onlyLatest: true
    },
    // 电站 曲线
    analysis_company_fail_month_stationline: {
        name: 'GETanalysis_company_fail_month_stationline',
        data: {},
        later: true,
        onlyLatest: true
    },
}, {
    __serviceName__: 'faultCompanyMonthService',
})('faultCompanyMonthCtrl', ['$scope', 'faultCompanyMonthService', 'actionRecord'], ($scope, myAjaxData, historicalRecord) => {
    /// 初始化 scope
    $scope.initChildScope($scope, myAjaxData);

    // 主页面初始化完成 回调
    $scope.mainPageInitComplete = async () => {
        let { showShape} = historicalRecord.get().themeFaultCompanyMonth || {};
        $scope.changeShowShape(showShape || 'list');
        const { dateType, dateTime } = historicalRecord.get();
        $scope.dateType = dateType;
        $scope.dateTime = dateTime;
        await $scope.dateUpdated();
        $('.ng-clock').removeClass('ng-clock');
        $scope.initComplete = true;
        await myAjaxData.timeout(0);
        await $scope.diffGetData(true);
        $scope.$apply();
    };


    // 切换电站 回调
    $scope.switchPowerCallback = () => {
        $scope.diffGetData();
    };


    // 点击电站名  跳转到电站页面
    $scope.trClick = (item, index, event) => {
        if (!event.target.className.includes('clickable')) return;
        $scope.reloadParentPage({
            stationData: {
                dataType: 0,
                id: item.stid,
                isGroup: "0",
                stClass: '01'
            }
        });
    };
    
    // 日期改变
    $scope.dateUpdated = async () => {
        await myAjaxData.timeout(0);
        $scope.diffGetData(true);
    };

    // 切换显示形式  图表 or 列表
    $scope.changeShowShape = showShape => {
        $scope.showShape = showShape;
        historicalRecord.set({
            themeFaultCompanyMonth: {
                ...historicalRecord.get().themeFaultCompanyMonth || {},
                showShape
            }
        });
        $scope.diffGetData();
    };

    // 接口请求
    $scope.diffGetData = async (getInfo) => {
        if (!$scope.initComplete) return;
        await myAjaxData.timeout(0);
        setDataNull(getInfo);
        const { showShape, dateTime, dateType, dataType } = $scope;
        if (dateType !== 1) return;
        if (dataType <= 0) return;
        if (getInfo) {
            $scope.analysis_company_fail_month_info.getData({
                queryCode: 'analysis_company_fail_month_info',
                queryType: 1,
                date: dateTime.showDate
            });
        }
        if (showShape === 'list') {
            $scope.analysis_company_fail_month_stationlist.getData({
                queryCode: 'analysis_company_fail_month_stationlist',
                queryType: 1,
                date: dateTime.showDate
            });
        } else if (showShape === 'chart') {
            $scope.analysis_company_fail_month_stationline.getData({
                queryCode: 'analysis_company_fail_month_stationline',
                queryType: 1,
                date: dateTime.showDate
            });
        }
    };

    // 电站 列表
    $scope.analysis_company_fail_month_stationlist.getDataCallback = (success, res) => {
        if (!success) return;
        $scope.datasource = res.body.data;
        $scope.column = [
            {
                title: '电站',
                dataIndex: 'st_name',
                align: 'left',
                width: '20%',
                sort: true,
                render(text) {
                    return `<span class="clickable">${text}</span>`
                }
            },
            {
                title: '装机容量' + '(' + res.body.units.inst_kw + ')',
                dataIndex: 'inst_kw',
                align: 'right',
                sort: true,
            },
            {
                title: '实发电量' + '(' + res.body.units.real_kwh_chk + ')',
                dataIndex: 'real_kwh_chk',
                align: 'right',
                sort: true,
            },
            {
                title: '故障损失电量' + '(' + res.body.units.fail_we + ')',
                dataIndex: 'fail_we',
                align: 'right',
                sort: true,
            },
            {
                title: '故障损失比例' + '(' + res.body.units.fail_we_r + ')',
                dataIndex: 'fail_we_r',
                align: 'right',
                sort: true,
            },
            {
                title: '故障时间' + '(' + res.body.units.fail_hours + ')',
                dataIndex: 'fail_hours',
                align: 'right',
                sort: true,
            },
            {
                title: '故障损失小时数' + '(' + res.body.units.fail_we_hours + ')',
                dataIndex: 'fail_we_hours',
                align: 'right',
                sort: true,
            },
            {
                title: 'mttr' + '(' + res.body.units.mttr + ')',
                dataIndex: 'mttr',
                align: 'right',
                sort: true,
            },
            {
                title: 'mtbf' + '(' + res.body.units.mtbf + ')',
                dataIndex: 'mtbf',
                align: 'right',
                sort: true,
            },
        ];
    };

    // 电站 曲线
    $scope.analysis_company_fail_month_stationline.getDataCallback = (success, res) => {
        if (!success) return;
        $scope.xdata = res.body.data.st_name;
        $scope.ydatas = [[res.body.data.real_kwh_chk, res.body.data.fail_we], [res.body.data.fail_we_r]];
        $scope.ydatas2 = [[res.body.data.mttr], [res.body.data.mtbf]];
    };

    // 数据置空
    function setDataNull(getInfo) {
        $scope.column = [];
        $scope.xdata = void 0;
        $scope.ydatas = void 0;
        $scope.ydatas2 = void 0;
        $scope.analysis_company_fail_month_stationlist.res = null;
        $scope.analysis_company_fail_month_stationline.res = null;
        if (getInfo) $scope.analysis_company_fail_month_info.res = null;
    }

    // 销毁 事件
    $scope.$on('$destroy', () => {
        setDataNull();
    });
});