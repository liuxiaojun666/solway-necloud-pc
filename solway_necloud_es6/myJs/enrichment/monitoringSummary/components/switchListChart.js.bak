app.directive('switchListChart', ['myAjaxData', '$ocLazyLoad', (myAjaxData, $ocLazyLoad) => ({
    restrict: 'E',
    replace: !0,
    template: `
    <div style="padding: 10px 0;position:absolute;z-index:10;left:30px;right:30px;background:{{showShape === 'list' ? '' : 'rgba(22,62,103,0.8)'}};" class="clearfix switch-list-chart icons">
        <style>
            .switch-list-chart.icons i{ color:#fff;cursor: pointer;margin-left: 2em;float:left;font-size:20px; } 
            .switch-list-chart i.iconfont.active{ color:#2ac2ad!important; }
            i.icon-daochu.disabled { color: rgba(255,255,255,.5)!important; }
        </style>
        <i ng-show="!noChart" title="图表" style="margin-top: 2px;font-size:15px;" ng-click="changeShowShape('chart')" class="iconfont icon-zhuzhuangtu" ng-class="{'active': showShape === 'chart'}"></i>
        <i ng-show="!noChart" title="列表" style="margin-top: 2px;" ng-click="changeShowShape('list')" class="iconfont icon-list" ng-class="{'active': showShape === 'list'}"></i>
    </div>`,
    scope: {
        showShape: '=',
        changeShowShape: '=',
        noChart: '='
    },
    link($scope, $element, $attrs) {
        
    },
    controller($scope) {
        if ($scope.noChart) $scope.changeShowShape('list')
    }
})])