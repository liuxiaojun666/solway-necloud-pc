ajaxData({
    companyDayToday: {
        name: 'GETpvMonitorGetRunKWPowerList',
        data: {
            queryType: 1,
            dateType: 3,
            date: (new Date).Format('yyyy-MM-dd')
        },
        onlyLatest: true,
        sameTimeOnce: true,
    },
}, {
        __serviceName__: 'themeElectricityCompanyDayTodayService'
    })('themeElectricityCompanyDayTodayCtrl', ['$scope', 'themeElectricityCompanyDayTodayService', 'actionRecord', '$interval'], ($scope, myAjaxData, historicalRecord, $interval) => {
        // 初始化 scope
        $scope.initChildScope($scope, myAjaxData);

        // 主页面初始化完成 回调
        $scope.mainPageInitComplete = async () => {
            $('.ng-clock').removeClass('ng-clock');
            $scope.initComplete = true;
            await myAjaxData.timeout(0);
            $scope.$apply();
        };

        // 切换电站 回调
        $scope.switchPowerCallback = () => {
            $scope.companyDayToday.res = null;
            if ($scope.dateType > 0) return $scope.companyDayToday.getData({});
        };

        // 集团 今日 列表
        $scope.companyDayToday.getDataCallback = (success, res) => {
            if (!success) return;
            $scope.column = [
                {
                    title: '电站名称',
                    dataIndex: 'st_name',
                    width: '20%',
                    sort: true,
                    style: 'position:relative',
                    render(text, item, index) {
                        if (item.comm == 1) return text + '<i title="通讯中断" class="iconfont icon-icon-life-alarm-copy" style="color: #9d9d9d;cursor:pointer;font-size:32px;position:absolute;top:0;right: 1em;line-height: 50px;"></i>';
                        else if (item.comm == 2) return text + '<i title="通讯初始化" class="iconfont icon-icon-life-alarm-copy" style="color: #9d9d9d;cursor:pointer;font-size:32px;position:absolute;top:0;right: 1em;line-height: 50px;"></i>';
                        else if (item.status == 99) return text + '<i title="正常" class="iconfont icon-icon-life-alarm-copy" style="color: #52b876;cursor:pointer;font-size:32px;position:absolute;top:0;right: 1em;line-height: 50px;"></i>';
                        else if (item.status == 1) return text + '<i title="故障" class="iconfont icon-icon-life-alarm-copy" style="color: #ff6161;cursor:pointer;font-size:32px;position:absolute;top:0;right: 1em;line-height: 50px;"></i>';
                        else if (item.status == 2) return text + '<i title="报警" class="iconfont icon-icon-life-alarm-copy" style="color: #be9856;cursor:pointer;font-size:32px;position:absolute;top:0;right: 1em;line-height: 50px;"></i>';
                    }
                },
                {
                    title: '装机容量(kW)',
                    dataIndex: 'inst_kw',
                    width: '10%',
                    sort: true,
                    align: 'right'
                },
                {
                    title: '实发电量(kWh)',
                    dataIndex: 'real_kwh',
                    width: '10%',
                    sort: true,
                    align: 'right'
                },
                {
                    title: '上网电量(kWh)',
                    dataIndex: 'send_kwh_chk',
                    width: '10%',
                    sort: true,
                    align: 'right'
                },
                {
                    title: '辐射总量(kWh/㎡)',
                    dataIndex: 'real_ld_kw',
                    width: '10%',
                    sort: true,
                    align: 'right'
                },
                {
                    title: '发电小时数(h)',
                    dataIndex: 'real_hours_h',
                    width: '10%',
                    sort: true,
                    align: 'right'
                },
            ];
        };

        // 定时器  定时刷新接口
        const timer = $interval(() => $scope.companyDayToday.getData({}), 10000);
        $scope.$on('$destroy', () => {
            $interval.cancel(timer);
            $scope.companyDayToday.res = null;
        });
    });