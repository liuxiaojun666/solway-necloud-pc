app.directive('detailTabs', ['myAjaxData', '$ocLazyLoad', (myAjaxData, $ocLazyLoad) => ({
    restrict: 'E',
    replace: !0,
    template: `
        <table style="float: left;">
            <tr>
                <td 
                    ng-click="changeTab($index);" 
                    ng-repeat="item in tabNames"
                    style="cursor:pointer;border: 1px solid #366090;padding: 5px 20px;background: {{currentTab === $index ? '#1cb09a': 'transparent'}};"
                    >{{item}}</td>
            </tr>
        </table>`,
    scope: {
        currentTab: '=',
        tabNames: "=",
        changeTab: '='
    }
})])