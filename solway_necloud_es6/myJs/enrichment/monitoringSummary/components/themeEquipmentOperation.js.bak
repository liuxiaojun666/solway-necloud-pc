}, {
    __serviceName__: 'themeEqumentOperationAjaxData'
    })('themeEqumentOperationCtrl', ['$scope', 'themeEqumentOperationAjaxData', '$timeout', '$interval'], ($scope, myAjaxData, $timeout, $interval) => {

    $scope.initChildScope($scope, myAjaxData);

    let myChart = echarts.init(document.getElementById('themePowerGaugeEchart'))
    
    const initEchart = (currentPower) => {
        const option = {
            tooltip: {
                formatter: "{a} <br/>{b}  {c}%"
            },
            toolbox: {
                show: false,
                feature: {
                    restore: {},
                    saveAsImage: {}
                }
            },
            series: [
                {
                    name: '出力比',
                    type: 'gauge',
                    radius: '85px',
                    // max:maxValue,
                    splitLine: {
                        length: 20,
                        lineStyle:{
                            color:'rgba(255,255,255,0.4)',
                            width:'1'
                        }
                    },
                    axisLine: {            // 坐标轴线
                        lineStyle: {       // 属性lineStyle控制线条样式
                            color: [[1, 'rgba(38,179,214,1)']],
                            width: 20,
                            // shadowColor: 'rgba(255,255,255,0.5)', //默认透明
                            // shadowBlur: 2
                        }
                    },
                    axisTick: {
                        // show:false,
                        splitNumber:5,
                        lineStyle: {
                            color: 'rgba(255,255,255,0.3)',
                        }
                    },
                    axisLabel: {
                        color: 'rgba(255,255,255,0.7)',
                        distance:5
                    },
                    pointer: {
                        width: 4,
                        length: '90%'
                    },
                    itemStyle: {
                        normal:{
                            color: '#c59e5b',
                            // borderWidth: 10,
                            // borderColor: 'pink'
                        }
                    },
                    detail: { formatter: '{value}%', show: false },
                    data: [{ value: currentPower, name: '' }]
                }
            ]
        };
        myChart.setOption(option)
        myChart.resize();
    }

    let pieChart = echarts.init(document.getElementById('themeEquipmentPieEchart'))
    const initPieEchart = (fault, comm, maintain, run, wait) => {
        const option = {
            tooltip: {
                trigger: 'item',
                confine:true
            },
            series: [
                {
                    type: 'pie',
                    radius: ['50', '75px'],
                    center: ['50%', '48%'],
                    // animation:false,
                    label: {
                        normal: {
                            show: false,
                            position: 'inside'
                        },
                        emphasis: {
                            show: false
                        }
                    },
                    lableLine: {
                        normal: {
                            show: false
                        },
                        emphasis: {
                            show: false
                        }
                    },
                    itemStyle:{
                        normal:{
                            // borderColor:'rgba(255,255,255,0.08)',
                            // borderWidth:'10',
                            // shadowColor:'rgba(255,255,255,0.8)',
                            // shadowOffsetX:0,
                            // shadowOffsetY:0,
                            // shadowBlur:10
                        }
                    },
                    data: [
                        {
                            value:fault,
                            name: '故障台数',
                            itemStyle: {
                                normal: {
                                    color: '#e57d70'
                                }
                            }
                        },
                        {
                            value: comm,
                            name: '离线台数',
                            itemStyle: {
                                normal: {
                                    color: '#a99bac'
                                }
                            }
                        },
                        {
                            value: maintain,
                            name: $scope.pieThirdItemName,//第三个参数，不同情况显示名称不一样
                            itemStyle: {
                                normal: {
                                    color: '#efc185'
                                }
                            }
                        },
                        {
                            value: wait,
                            name: '待机台数',
                            itemStyle: {
                                normal: {
                                    color: '#62a6c9'
                                }
                            }
                        },
                        {
                            value: run,
                            name: '运行台数',
                            itemStyle: {
                                normal: {
                                    color: '#7072c9'
                                }
                            }
                        }
                    ]
                }
            ]
        };
        pieChart.setOption(option)
        pieChart.resize();
    }

    const initParams = async() => {
        if ($scope.detailFullPage) {
            return false;
        } else {
            if ($scope.getTopXhr === false) return false; 

            const queryType = $scope.dataType ? 1 : 3 //集团1，电站3
            const dateType = ($scope._dateType == 0) ? 3 : ($scope._dateType == 1 ? 2 : 1);
            const dateTime = $scope._dateTime.showDate;

            await myAjaxData.timeout(0)
            $("#themePowerGaugeEchart").width($("#themePower").width()*0.5);
            
            $scope.getAjaxData(queryType, dateTime, dateType)

        }
    }

    //父页面初始化完成
    $scope.mainPageInitComplete = () => {
        if ($scope._dateType != 3) {
            $scope.themePowerIsLoding = true;
            initParams();
        }
    };

    //切换日期类型
    $scope.dateUpdated = () => {
        if ($scope._dateType != 3) {
            $scope.themePowerIsLoding = true;
            initParams();
        }
    }

    //切换电站
    $scope.switchPowerCallback = () => {
        if ($scope._dateType != 3) {
            $scope.themePowerIsLoding = true;
            initParams();
        }
    }

    //点击放大后
    $scope.switchDetailFullPage = () => {
        initParams();
    }
    
    //接口
    $scope.getAjaxData = (queryType, dateTime, dateType) => {
        // $scope.themePowerIsLoding = !$scope.currentPowerInfo.res;
        if ($scope.currentClass == 'StationDayToday' || $scope.currentClass == 'CompanyDayToday'){
            // $scope.currentPowerInfo.getData({
            //     'queryType': queryType,
            //     'date': dateTime,
            //     'dateType': dateType
            // }).then(res => {
            //     $scope.themePowerIsLoding = false;
            //     if (res.code == 0) {
            //         $scope.data = res.body;
            //         initEchart(res.body.kw_r[0]);
            //     }else{
            //         $scope.data = {};
            //         initEchart('');
            //     }
            //     $scope.$emit('lastUpdate', { comm: res.body.comm, dtime: res.body.dtime})
            // })

            // $scope.deviceCurrent.getData({
            //     'queryType': queryType,
            //     'date': dateTime,
            //     'dateType': dateType
            // }).then(res => {
            //     $scope.themePowerIsLoding = false;
            //     if (res.code == 0) {
            //         const data = res.body;
            //         $scope.data = data;
            //         $scope.devTotal = data.fault + data.comm + data.maintain + data.run + data.wait ;
            //         $scope.pieThirdItemName = '维护台数';
            //         initPieEchart(data.fault, data.comm, data.maintain, data.run, data.wait);//故障、离线、维护、运行、待机
            //     }
            // })
            $scope.getRunAcpStatus.getData({
                'queryType': queryType,
                'date': dateTime,
                'dateType': dateType
            }).then(res => {
                $scope.themePowerIsLoding = false;
                if (res.code == 0) {

                    let acpInfo = res.body.acpInfo;
                    $scope.data = acpInfo;
                    $scope.$emit('lastUpdate', { comm:acpInfo.comm, dtime: acpInfo.dtime})
                    if(acpInfo.kw_r){
                        initEchart(acpInfo.kw_r[0]);
                    }else{
                        initEchart('');
                    }

                    let acpStatusInfo =  res.body.acpStatusInfo;
                    
                    $scope.devTotal = acpStatusInfo.fault + acpStatusInfo.comm + acpStatusInfo.maintain + acpStatusInfo.run + acpStatusInfo.wait ;
                    $scope.fail_count = acpStatusInfo.fault;

                    $scope.pieThirdItemName = '维护台数';
                    initPieEchart(acpStatusInfo.fault, acpStatusInfo.comm, acpStatusInfo.maintain, acpStatusInfo.run, acpStatusInfo.wait);//故障、离线、维护、运行、待机
                    
                }else{
                    $scope.data = {};
                    initEchart('');
                    initPieEchart('','','','','');
                }
            })
        }else{
            let params = '';
            switch ($scope.currentClass) {
                case 'StationDayAgo':
                    params = 'query_station_day_dev_subject_his'
                    break;
                case 'StationMonth':
                    params = 'query_station_month_dev_subject_his'
                    break;
                case 'StationYear':
                    params = 'query_station_year_dev_subject_his'
                    break;
                case 'CompanyDayAgo':
                    params = 'query_company_day_dev_subject_his'
                    break;
                case 'CompanyMonth':
                    params = 'query_company_month_dev_subject_his'
                    break;
                case 'CompanyYear':
                    params = 'query_company_year_dev_subject_his'
                    break;
                default:
                    break;
            }
            $scope.getHistoryData(params, queryType, dateTime)
        }
    }

    //历史接口
    $scope.getHistoryData = (params, queryType, dateTime) => {
        $scope[params].getData({
            'queryCode': params,
            'queryType': queryType,
            'date': dateTime
        }).then(res => {
            $scope.themePowerIsLoding = false;
            if (res.code == 0) {
                const data = res.body;
                $scope.data = data;
                $scope.devTotal = data.alarm_count + data.fail_count + data.inter_count;
                $scope.fail_count = data.fail_count;
                
                $scope.pieThirdItemName = '告警台数';

                initPieEchart(data.fail_count, data.inter_count, data.alarm_count);//故障、离线、告警
                if(data.max_p_rate){
                    initEchart(data.max_p_rate[0]);
                }else{
                    initEchart('');
                }
            }
        })
    }

    const interval = $interval(() => {
        if ($scope.currentClass === 'StationDayToday' || $scope.currentClass === 'CompanyDayToday') initParams();
    }, 10000);

    function setThemepowerWidth() {
        $("#themePowerGaugeEchart").width($("#themePower").width()*0.5)
        myChart.resize();
        pieChart.resize();
    }

    window.addEventListener('resize', setThemepowerWidth);

    $scope.$on('$destroy', () => {
        myChart = null;
        $interval.cancel(interval);
        window.removeEventListener('resize', setThemepowerWidth);
    });
});