ajaxData({
    // 电站 日 月 年 
    stationData: {
        name: 'GETpvMonitorGetRunBaseList',
        data: {},
        later: true,
        onlyLatest: true
    }
}, {
    __serviceName__: 'themeBasicSituationDetailService'
})('themeBasicSituationDetailCtrl', ['$scope', 'themeBasicSituationDetailService', 'historicalRecord'], ($scope, myAjaxData, historicalRecord) => {
    // 初始化 scope
    $scope.initChildScope($scope, myAjaxData);

    // 主页面初始化完成 回调
    $scope.mainPageInitComplete = async () => {
        let { showShape } = historicalRecord.get().themeBasicSituationData || {};
        if ($scope.currentClass === 'CompanyDayToday') showShape = 'list';
        $scope.changeShowShape(showShape || 'list');
        const {dateType, dateTime} = historicalRecord.get();
        $scope.dateType = dateType;
        $scope.dateTime = dateTime;
        $('.ng-clock').removeClass('ng-clock');
        $scope.initComplete = true;
        await myAjaxData.timeout(0);
        diffGetData();
        $scope.$apply();
    };

    // 切换电站 回调
    $scope.switchPowerCallback = () => {

    };

    // 日期改变
    $scope.dateUpdated = () => {
        if ($scope.currentClass === 'CompanyDayToday') $scope.changeShowShape('list');
    };

    // 详情 放大缩小  回调
    $scope.switchDetailFullPage = () => {
        
    }

    // 切换显示形式  图表 or 列表
    $scope.changeShowShape = async showShape => {
        $scope.showShape = showShape;
        historicalRecord.set({
            themeBasicSituationData: {
                ...historicalRecord.get().themeBasicSituationData || {},
                showShape
            }
        });
    };

    // 列表
    $scope.column = [
        {
            title: '电站名称',
            dataIndex: '',
            width: '',
            align: 'left'
        }, {
            title: '装机容量',
            dataIndex: '',
            width: '',
            align: 'left'
        }, {
            title: '投产时间',
            dataIndex: '',
            width: '',
            align: 'center'
        }, {
            title: '接入时间',
            dataIndex: '',
            width: '',
            align: 'center'
        }, {
            title: '地址',
            dataIndex: '',
            width: '',
            align: 'left'
        }
    ];

    async function diffGetData() {
        if (!$scope.initComplete) return;
        await myAjaxData.timeout(0);
        const { currentClass, showShape, dateTime, dataType, dateType } = $scope;
        if (dataType === 0) {
            // 电站接口
            $scope.stationData.getData({
                queryType: 3,
                dateType: [1,2,3][dateType],
                date: dateTime.showDate
            });
        }
    }

});