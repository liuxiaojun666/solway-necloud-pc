ajaxData({
    // 电站日
    StationDay: {
        name: 'GETresourceDetailStationDay',
        data: {},
        later: true,
        onlyLatest: true
    },
    // 电站 月 时间 列表
    query_station_month_res_timelist_his: {
        name: 'GETquery_station_month_res_timelist_his',
        data: {},
        later: true,
        onlyLatest: true
    },
    // 电站 月 时间 曲线
    query_station_month_res_timeline_his: {
        name: 'GETquery_station_month_res_timeline_his',
        data: {},
        later: true,
        onlyLatest: true
    },
}, {
    __serviceName__: 'themeResourceDetailService'
})('themeResourceDetailCtrl', ['$scope', 'themeResourceDetailService', 'historicalRecord'], ($scope, myAjaxData, historicalRecord) => {
    // 初始化 scope
    $scope.initChildScope($scope, myAjaxData);

    // 主页面初始化完成 回调
    $scope.mainPageInitComplete = async () => {
        let { showShape, select1, select2, tabIndex = 0 } = historicalRecord.get().themeResource || {};
        if ($scope.currentClass === 'CompanyDayToday') showShape = 'list';
        $scope.changeShowShape(showShape || 'list');
        const { dateType, dateTime } = historicalRecord.get();
        $scope.dateType = dateType;
        $scope.dateTime = dateTime;
        $scope.select1 = select1 || 2;
        $scope.select2 = select2 || 2;
        $scope.selectChange('select1');
        $scope.selectChange('select2');
        $scope.changeTab(tabIndex);
        $('.ng-clock').removeClass('ng-clock');
        $scope.initComplete = true;
        diffGetData();
        $scope.$apply();
    };

    // 切换电站 回调
    $scope.switchPowerCallback = () => {
        if ($scope.currentClass === 'CompanyDayToday') $scope.changeShowShape('list');
        diffGetData();
    };

    // 日期改变
    $scope.dateUpdated = () => {
        if ($scope.currentClass === 'CompanyDayToday') $scope.changeShowShape('list');
        diffGetData();
    };

    // 详情 放大缩小  回调
    $scope.switchDetailFullPage = () => {
        diffGetData();
    }

    // tab 切换
    $scope.changeTab = tabIndex => {
        $scope.tabIndex = tabIndex;
        historicalRecord.set({
            themeResource: {
                ...historicalRecord.get().themeResource || {},
                tabIndex
            }
        });
        diffGetData();
    };

    // 切换显示形式  图表 or 列表
    $scope.changeShowShape = showShape => {
        $scope.showShape = showShape;
        historicalRecord.set({
            themeResource: {
                ...historicalRecord.get().themeResource || {},
                showShape
            }
        });
        diffGetData();
    };

    // 图标轴线切换
    $scope.selectChange = async (arg) => {
        await myAjaxData.timeout(0);
        historicalRecord.set({
            themeResource: {
                ...historicalRecord.get().themeResource || {},
                [arg]: $scope[arg]
            }
        });
        diffGetData();
    };

    // 判断 调用  对应 接口
    async function diffGetData() {
        if (!$scope.initComplete) return;
        await myAjaxData.timeout(0);
        switch ($scope.currentClass) {
            case 'StationDayToday':
                $scope.StationDay.getData({
                    queryType: 3,
                    dateType: 3,
                    date: $scope.dateTime.showDate
                });
                break;

            case 'StationDayAgo':
                $scope.StationDay.getData({});
                break;

            case 'StationMonth':
                $scope.query_station_month_res_timelist_his.getData({
                    queryCode: 'query_station_month_res_timelist_his',
                    queryType: 3,
                    date: $scope.dateTime
                });
                $scope.query_station_month_res_timeline_his.getData({
                    queryCode: 'query_station_month_res_timeline_his',
                    queryType: 3,
                    date: $scope.dateTime
                });
                break;

            case 'StationDayAgo':
                $scope.StationDay.getData({});
                break;

            case 'StationDayAgo':
                $scope.StationDay.getData({});
                break;

            case 'StationDayAgo':
                $scope.StationDay.getData({});
                break;

            case 'StationDayAgo':
                $scope.StationDay.getData({});
                break;

            case 'StationDayAgo':
                $scope.StationDay.getData({});
                break;
        
            default:
                break;
        }
    }

    // 列表
    $scope.column = [
        {
            title: '电站名称',
            dataIndex: '',
            width: '',
            align: 'left'
        }
    ];
});