app.directive('commonChartPie', ['myAjaxData', '$ocLazyLoad', (myAjaxData, $ocLazyLoad) => ({
    restrict: 'E',
    scope: {
        width: '=',
        height: '=',
        detail: '=',
        chartName: '@',
        chartData: '=',
        colors: '='
    },
    link($scope, $element, $attrs) {
        const setWidthHeight = () => {
            $($element).width($scope.width).height($scope.height)
        }
        setWidthHeight()
        let myChart = echarts.init($element[0])
        const resizeFun = async () => {
            await myAjaxData.timeout(0)
            setWidthHeight()
            myChart.resize()
        }
        window.addEventListener('resize', resizeFun)
        $scope.$on('$destroy', () => {
            window.removeEventListener('resize', resizeFun)
            myChart.dispose()
            myChart = null
        })
        const renderChart = () => {
            const option = {
                tooltip: {
                    trigger: 'item',
                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                },
                series: [{
                    name: $scope.chartName,
                    center: [ '50%', '50%' ],
                    radius: [ '45%', '70%' ],
                    type: 'pie',
                    data: $scope.chartData.map((v, i) => ({
                        name: v.name,
                        value: v.data,
                        label: {
                            normal: {
                                textStyle: {
                                    color: '#3f3f3f',
                                    fontSize: 14
                                }
                            }
                        },
                        itemStyle: {
                            normal: {
                                color: $scope.colors[i]
